<script type="text/javascript">
    $(document).ready(function() {
        $("#parent_id").select2().on("change", function(e) {
            var val = $(this).val();
        });
        $("#feature_type").select2().on("change", function(e) {
            var val = $(this).val();
            if( val == 0 ){
                $('.box-color-patten').hide();
            }else{
                $('.box-color-patten').show();
            }
        });
        $("#is_value").select2().on("change", function(e) {
            var val = $(this).val();
            if( val == 0 ){
                $('.box-color-patten .is_color').show();
                $('.box-color-patten .is_pattern').hide();
            }else{
                $('.box-color-patten .is_color').hide();
                $('.box-color-patten .is_pattern').show();
            }
        });
        $("#feature_type").trigger('change');
        $("#is_value").trigger('change');
    });
</script>
